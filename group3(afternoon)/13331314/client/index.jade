
head
	title My Homeork

body
	div.container
		if currentUser
			if identity
				div.row
					div.col-sm-6.col-md-4.col-md-offset-4
						if isTeacher
							h1.text-center.login-title Hello, professor {{user}}!
						else
							h1.text-center.login-title Welcome {{user}}, hard work is important!
						h1.text-center.login-title {{> loginButtons}}
						div.signup-wall
							div
								each homeworks
									{{>homework}}
						if isTeacher
							a(class='btn btn-lg btn-info btn-block' id='publish') Create Homework
							a(class='btn btn-lg btn-info btn-block' id='management') Manage All Requirements
							a(class='btn btn-lg btn-info btn-block' id='grade') View All Submit
				{{> manage}}

								
			else
				{{> confirm}}

		else
			{{> account}}

template(name="homework")

	div.homework
		p question : {{question}}
		p from : {{teacher}}
		p Requirements : {{requirement}}
		p Deadline : {{deadline}}
		a(class='btn btn-lg btn-info btn-block' id='submit') Submit
		if isSubmit
			form(class='form-signin', id="submit")
				textarea(class="form-control" rows="5" cols="50" name="submit" placeholder='submit')
				button(class='btn btn-lg btn-primary btn-block submit', type='submit') Submit
	hr
